---
import Layout from '@/layouts/Layout.astro';
import BookingForm from '@/components/BookingForm.astro';
const currentPath = Astro.url.pathname;
---

<Layout 
    title="Private Driver Grenoble Airport | Airport & Ski Resort Transfers"
    description="Private driver (VTC) service in Grenoble with a 100% electric Nissan Leaf. Fixed rates for Lyon, Geneva airports and ski resorts. An alternative to taxis.">

    <section class="hero">
        <video playsinline autoplay muted loop poster="">
            <source src="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/nissan.mp4" type="video/mp4">
        </video>
        <div class="hero-content">
            <h1>Your Private Driver in Grenoble Airport and ski resorts</h1>
            <p>Business trips, airport transfers, or getaways to the Alps in a 100% electric vehicle.</p>
            <a href="#booking" class="cta-button">Estimate and Book Your Ride</a>
        </div>
    </section>

    <section id="forfaits" class="content-section">
        <h2>Our Exclusive Packages</h2>
        <div class="forfaits-grid">
            
            <div class="forfait-card special-card">
                <i class="icon-plane"></i>
                <h3>Grenoble ‚Üî Lyon St-Exup√©ry Airport</h3>
                <p class="prix">‚Ç¨220</p>
                <p><strong>Sedan Package.</strong> The most comfortable airport shuttle, an alternative to taxis.</p>
            </div>
            
            <div class="forfait-card">
                <i class="icon-mountains"></i>
                <h3>Lyon Airport (LYS) ‚Üî Alpe d'Huez</h3>
                <p class="prix">‚Ç¨360</p>
                <p>Direct and fast transfer to the resort. Premium Sedan service.</p>
            </div>
            
            <div class="forfait-card special-card">
                <i class="icon-plane"></i>
                <h3>Grenoble Airport (GNB) ‚Üî Alpe d'Huez</h3>
                <p class="prix">‚Ç¨260</p>
                <p>Optimized transfer for your arrival in Is√®re.</p>
            </div>

            <div class="forfait-card">
                <i class="icon-global"></i>
                <h3>Grenoble ‚Üî Geneva Airport</h3>
                <p class="prix">‚Ç¨350</p>
                <p><strong>Sedan Package.</strong> Stress-free international travel. Direct trip to GVA.</p>
            </div>

            <div class="forfait-card special-card">
                <i class="icon-mountains"></i>
                <h3>Grenoble ‚Üî Ski Resorts</h3>
                <p class="prix">From ‚Ç¨99</p>
                <p>Transfers to Les 2 Alpes, Chamrousse, Courchevel, etc. Arrive at the foot of the slopes.</p>
            </div>
            
            <div class="forfait-card">
                <i class="icon-clock"></i>
                <h3>As-Directed Service</h3>
                <p class="prix">‚Ç¨60/hour</p>
                <p>For your business meetings, seminars, or private events. Quote available for full-day service.</p>
            </div>
            
        </div>
        <a href="/nos-tarifs" class="secondary-button">See all our packages &amp; rates</a>
    </section>

    <section id="booking" class="booking-section">
        <h2>Estimate and Book Your Driver</h2>
        <BookingForm currentPath={currentPath} />
    </section>

</Layout>
<style>
    /* CSS styles are kept as they are, since they are universal. */
    /* ------------------------------------------- */
    /* Nouveaux styles pour la vid√©o en plein √©cran */
    /* ------------------------------------------- */
    .hero {
        position: relative; 
        width: 100%;
        height: 80vh; 
        overflow: hidden; 
        display: flex;
        flex-direction: column; 
        align-items: center; 
        justify-content: center; 
        color: white; 
        text-align: center;
    }

    .hero video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: 1; 
        transform: translate(-50%, -50%);
        filter: brightness(0.65); 
    }

    .hero-content {
        position: relative; 
        z-index: 10; 
        padding: 1rem;
    }
    
    .hero-content h1 {
        font-size: clamp(2em, 5vw, 3.5em);
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }
    
    .hero-content p {
        font-size: clamp(1.1em, 2vw, 1.5em);
        margin-bottom: 2rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    }
    
    /* ------------------------------------------- */
    /* Styles pour le CTA (Call To Action) - Rendu plus visible et incitatif */
    /* ------------------------------------------- */
    :root {
        --accent: #007bff; 
        --accent-dark: #0056b3; 
        --primary-text: #333;
        --secondary-bg: #f5f5f5;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background-color: var(--accent); 
        color: white;
        text-decoration: none;
        border-radius: 50px; 
        font-weight: bold;
        font-size: 1.1em;
        letter-spacing: 1px;
        text-transform: uppercase;
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); 
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

    .cta-button:hover {
        background-color: var(--accent-dark); 
        transform: translateY(-2px); 
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
    }

    /* ------------------------------------------- */
    
    /* Styles pour les sections de contenu */
    .content-section, .booking-section { padding: 4rem 2rem; text-align: center; }
    .booking-section { background: var(--secondary-bg); }
    .content-section h2 { 
        font-size: 2.2em; 
        margin-bottom: 3rem; 
        color: var(--primary-text);
        position: relative;
    }
    .content-section h2::after {
        content: '';
        display: block;
        width: 50px;
        height: 3px;
        background: var(--accent);
        margin: 10px auto 0;
    }

    /* Styles de la grille et des cartes */
    .forfaits-grid {
        display: grid;
        /* Adapt√© pour 3 cartes par ligne sur grand √©cran */
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .forfait-card { 
        border: 1px solid #ddd; 
        border-radius: 12px; 
        text-align: center; 
        padding: 2.5rem 1.5rem; 
        box-shadow: 0 8px 15px rgba(0,0,0,0.08); 
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: white;
    }
    .forfait-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0,0,0,0.15);
    }

    /* Style sp√©cifique pour les cartes principales (A√©roport) */
    .special-card {
        background-color: var(--accent);
        color: white;
        border-color: var(--accent);
    }
    .special-card .prix {
        color: white; 
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }
    .special-card .icon-plane, .special-card .icon-global, .special-card .icon-mountains { /* Ajout de .icon-mountains pour les cartes bleues */
        color: white;
        background: rgba(255, 255, 255, 0.2); 
    }


    /* Styles du texte dans la carte */
    .forfait-card h3 {
        font-size: 1.4em;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .prix { 
        font-size: 2.5em; 
        color: var(--accent); 
        font-weight: 700; 
        margin: 0.2em 0;
    }
    .forfait-card p {
        color: #666;
        font-size: 0.95em;
    }
    .special-card p {
        color: #eee;
    }
    
    /* Ic√¥nes (simul√©es) */
    .forfait-card i {
        display: block;
        font-size: 2.5em;
        color: var(--accent);
        margin-bottom: 1rem;
        background: var(--secondary-bg);
        width: 60px;
        height: 60px;
        line-height: 60px;
        border-radius: 50%;
        margin-left: auto;
        margin-right: auto;
        font-style: normal;
        font-family: Arial, sans-serif;
        font-weight: bold;
    }

    .icon-plane::before { content: '‚úàÔ∏è'; }
    .icon-mountains::before { content: 'üèîÔ∏è'; }
    .icon-global::before { content: 'üåç'; }
    .icon-clock::before { content: '‚è±Ô∏è'; }

    /* Styles du bouton secondaire */
    .secondary-button {
        display: inline-block;
        margin-top: 4rem;
        padding: 0.8rem 1.8rem;
        border: 2px solid var(--accent);
        color: var(--accent);
        text-decoration: none;
        border-radius: 50px; 
        font-weight: bold;
        transition: background-color 0.2s ease, color 0.2s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9em;
    }
    .secondary-button:hover {
        background-color: var(--accent);
        color: white;
    }

    /* Media Queries pour les petits √©crans */
    @media (max-width: 600px) {
        .content-section, .booking-section { padding: 3rem 1rem; }
        .hero { height: 60vh; }
        .hero-content h1 { font-size: 2em; }
        .hero-content p { font-size: 1.1em; }
        .cta-button { padding: 0.8rem 1.5rem; font-size: 1em; }
    }
</style>