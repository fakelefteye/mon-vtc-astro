---
// src/components/Header.astro

// Logique pour le sÃ©lecteur de langue
const { pathname } = Astro.url;
const currentPath = pathname.startsWith('/en') || pathname.startsWith('/es')
  ? pathname.substring(3) || '/'
  : pathname;
---
<header>
    <nav>
        <a href="/" class="logo">
            <img 
                src="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/logo_ship_cars.png" 
                alt="Logo Ship Cars VTC Grenoble" 
                width="150" height="45" />
        </a>

        <div class="nav-container" id="nav-container">
            <div class="nav-links">
                <a href="/">Accueil</a>
                <a href="/a-propos">Ã€ Propos</a>
                <a href="/transferts-aeroports">Nos Tarifs</a>
                <a href="/contact">Contact</a>
            </div>
            
            <div class="language-picker">
                <a href={currentPath} class:list={{ active: !pathname.startsWith('/en') && !pathname.startsWith('/es') }}>ðŸ‡«ðŸ‡·</a>
                <a href={`/en${currentPath}`} class:list={{ active: pathname.startsWith('/en') }}>ðŸ‡¬ðŸ‡§</a>
                <a href={`/es${currentPath}`} class:list={{ active: pathname.startsWith('/es') }}>ðŸ‡ªðŸ‡¸</a>
            </div>

            <a href="/#booking" class="cta-button">RÃ©server</a>
        </div>

        <button class="hamburger" id="hamburger-button" aria-label="Ouvrir le menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </nav>
</header>

<script>
    // Script pour gÃ©rer l'ouverture/fermeture du menu mobile
    const hamburger = document.getElementById('hamburger-button');
    const navContainer = document.getElementById('nav-container');

    hamburger.addEventListener('click', () => {
        navContainer.classList.toggle('is-open');
        hamburger.classList.toggle('is-open');
    });
</script>

<style>
    header {
        background: var(--dark-bg, #111827);
        padding: 1rem 2rem;
        position: sticky;
        top: 0;
        z-index: 50;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .logo img {
        display: block; /* Ã‰vite un petit espace sous l'image */
        height: 75px; /* Hauteur fixe pour un meilleur contrÃ´le */
        width: auto;
    }

    .nav-container {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .nav-links a {
        color: white;
        text-decoration: none;
        font-size: 1.1rem; /* âœ… Taille de police augmentÃ©e */
        font-weight: 500;
        padding: 0.5rem 0;
        position: relative;
        transition: color 0.2s;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent,#35C2B5 );
        transition: width 0.3s ease-in-out;
    }

    .nav-links a:hover {
        color: var(--accent, #007bff);
    }
    
    .nav-links a:hover::after {
        width: 100%;
    }

    .language-picker {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        border-left: 1px solid rgba(255, 255, 255, 0.2);
        padding-left: 2rem;
    }

    .language-picker a {
        font-size: 1.5rem; /* âœ… Taille des drapeaux */
        text-decoration: none;
        opacity: 0.6;
        transition: opacity 0.2s;
    }

    .language-picker a.active,
    .language-picker a:hover {
        opacity: 1;
    }

    .cta-button {
        background: #35C2B5;
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s, transform 0.2s;
    }
    .cta-button:hover {
        background: var(--accent-hover, #0056b3);
        transform: scale(1.05);
    }

    .hamburger {
        display: none; /* CachÃ© sur grand Ã©cran */
        flex-direction: column;
        gap: 5px;
        background: none;
        border: none;
        cursor: pointer;
    }
    .hamburger span {
        display: block;
        width: 25px;
        height: 3px;
        background: white;
        transition: transform 0.3s, opacity 0.3s;
    }

    /* Styles pour le menu mobile */
    @media (max-width: 900px) {
        .nav-container {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: var(--dark-bg, #111827);
            flex-direction: column;
            align-items: center;
            padding: 2rem 0;
            gap: 2rem;
            transform: translateY(-150%); /* CachÃ© par dÃ©faut */
            transition: transform 0.4s ease-in-out;
        }

        .nav-container.is-open {
            transform: translateY(0); /* ApparaÃ®t quand la classe 'is-open' est ajoutÃ©e */
        }
        
        .nav-links {
            flex-direction: column;
            text-align: center;
        }

        .language-picker {
            padding-left: 0;
            border-left: none;
        }

        .hamburger {
            display: flex; /* Visible sur petit Ã©cran */
        }

        /* Animation du bouton hamburger */
        .hamburger.is-open span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }
        .hamburger.is-open span:nth-child(2) {
            opacity: 0;
        }
        .hamburger.is-open span:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -7px);
        }
    }
</style>