---
// src/layouts/Layout.astro
// --- PARTIE FRONTMATTER ASTRO ---
// Ces imports doivent rester ici pour les composants que vous utilisez directement
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

// Pour Vercel Analytics et Speed Insights, nous allons les gérer via astro.config.mjs
// Donc, retirez ces imports d'ici :
import  Analytics  from '@vercel/analytics/astro';
import  SpeedInsights  from "@vercel/speed-insights/astro";


export interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
const googleMapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/favicon/favicon.svg" />
    <link rel="shortcut icon" href="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SHIP CARS" />
    <link rel="manifest" href="https://pub-d35dc23058ee46aca93fb6f682ad5e37.r2.dev/favicon/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />

    <script src="https://js.stripe.com/v3/" async defer onload="window.dispatchEvent(new CustomEvent('stripe-loaded'))"></script>

    <script define:vars={{ googleMapsApiKey }}>
        function initMap() {
            window.dispatchEvent(new CustomEvent('maps-loaded'));
        }
        window.initMap = initMap;
    </script>
    <script
        async defer
        src={`https://maps.googleapis.com/maps/api/js?key=${googleMapsApiKey}&libraries=places&callback=initMap`}
    ></script>

    <style>
        :root {
            /* Couleurs harmonisées avec le logo */
            --accent: #35c2b5; /* Votre bleu turquoise (pour les éléments d'accent, boutons) */
            --dark-bg: #2d3a4c; /* Votre bleu marine foncé (pour le fond du header, footer) */
            --text-color: #333; /* Couleur de texte générale */
            --header-bg: var(--dark-bg); /* Fond de l'en-tête, harmonisé avec le logo */
            --header-text: #ffffff; /* Couleur du texte dans l'en-tête */
        }
        html { font-family: 'Montserrat', sans-serif; scroll-behavior: smooth; }
        body { margin: 0; }
        /* Styles de base pour le header et la nav si non déjà définis ailleurs */
        header { background-color: var(--header-bg); color: var(--header-text); padding: 1rem 0; }
        header a { color: var(--header-text); text-decoration: none; }
        header a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <Header currentPath={Astro.url.pathname} />
    <main><slot /></main>

    <Footer currentPath={Astro.url.pathname} />

    <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>

<script type="text/javascript">
    // 1. DÉFINIR LA FONCTION POUR CHARGER GOOGLE ANALYTICS
    // =========================================================
    function loadGoogleAnalytics() {
        // On vérifie si le script n'a pas déjà été chargé pour éviter les doublons
        if (window.gaLoaded) {
            return;
        }

        const gaId = 'G-82VWM02RGP'; // Votre ID est correct

        const script = document.createElement('script');
        script.async = true;
        script.src = `https://www.googletagmanager.com/gtag/js?id=${gaId}`;
        document.head.appendChild(script);

        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', gaId);
        
        window.gaLoaded = true; // On marque le script comme chargé
        console.log("✅ Google Analytics a été chargé car l'utilisateur a consenti.");
    }

    // 2. INITIALISER LA BANNIÈRE DE COOKIES UNE SEULE FOIS
    // =========================================================
    window.addEventListener("load", function(){
        window.cookieconsent.initialise({
            "palette": {
                "popup": { "background": "#2d3a4c", "text": "#ffffff" },
                "button": { "background": "#35c2b5", "text": "#ffffff" }
            },
            "theme": "edgeless",
            "position": "bottom-right",
            "type": "opt-in", // Très important pour le RGPD !
            "content": {
                "message": "Nous utilisons des cookies pour analyser le trafic du site et améliorer votre expérience.",
                "allow": "Accepter tout",
                "deny": "Refuser",
                "link": "En savoir plus",
                "href": "/politique-de-cookies", // Assurez-vous que cette page existe
            },

            // 3. APPELER LA FONCTION DE CHARGEMENT AU BON MOMENT
            // =========================================================
            onInitialise: function(status) {
                // Se déclenche au chargement de la page
                if (this.hasConsented()) {
                    // Si l'utilisateur a déjà accepté par le passé
                    loadGoogleAnalytics();
                }
            },
            onStatusChange: function(status) {
                // Se déclenche quand l'utilisateur clique sur un bouton
                if (this.hasConsented()) {
                    // Si l'utilisateur vient d'accepter
                    loadGoogleAnalytics();
                }
            }
        });
    });
</script>

</body>
</html>