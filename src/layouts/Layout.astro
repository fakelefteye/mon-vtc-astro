---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
export interface Props {
	title: string;
    description: string; // Ajout pour le SEO
}
const { title, description } = Astro.props;
const googleMapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="VTC Grenoble, chauffeur privé Grenoble, aéroport Lyon Saint-Exupéry, transfert stations de ski, Alpes, séminaire" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <script is:inline src={`https://maps.googleapis.com/maps/api/js?key=${googleMapsApiKey}&libraries=places,geometry&callback=initMap`} defer></script>
    <script is:inline>function initMap() { window.dispatchEvent(new CustomEvent('maps-loaded')); }</script>
    <style>
        :root { --accent: #c5a47e; --dark-bg: #1a1a1a; --text-color: #333; }
        html { font-family: 'Montserrat', sans-serif; background: #fff; color: var(--text-color); scroll-behavior: smooth; }
        main { margin: 0; padding: 0; max-width: 100%; }
    </style>
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>